<%= form_for [:admin, @train, @van] do |form| %>
  <%= render 'common/errors', resource: @van %>
  <p>для поезда <%= @train.number %>  </p>
  <div class="field">
    <%= form.label :type, 'Выберите тип:' %>
    <%= form.collection_select :type, VanKind.all, :van_type, :title %>
  </div>

  <table>
    <tr>
      <div class="field PlatzVan CoupeVan van_seats_field" hidden>
        <%= form.label :top_seats, 'Верхние ' %>
        <%= form.text_field :top_seats %>
      </div>
    </tr>
    <tr>
      <div class="field PlatzVan CoupeVan SleepingVan van_seats_field" hidden>
        <%= form.label :bottom_seats, 'Нижние ' %>
        <%= form.text_field :bottom_seats %>
      </div>
    </tr>
    <tr>
      <div class="field PlatzVan van_seats_field" hidden>
        <%= form.label :side_top_seats, 'Верхние боковые' %>
        <%= form.text_field :side_top_seats %>
      </div>
    </tr>
    <tr>
      <div class="field PlatzVan van_seats_field" hidden>
        <%= form.label :side_bottom_seats, 'Нижние боковые' %>
        <%= form.text_field :side_bottom_seats %>
      </div>
    </tr>
    <tr>
      <div class="field SedentaryVan van_seats_field" hidden>
        <%= form.label :seats, 'Сидячие' %>
        <%= form.text_field :seats %>
      </div>
    </tr>
  </table>

  <div class="actions">
    <%= form.submit "#{ @van.new_record? ? 'Создать вагон' : 'Изменить вагон'}" %>
  </div>
<% end %>
